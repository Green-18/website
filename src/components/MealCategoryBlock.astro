---
import type { Meal } from '../types';
import MealRow from './MealRow.astro';
import Content from './widgets/Content.astro';

export interface Props {
  title: string;
  subtitle?: string;
  meals: Meal[];
}

const { title, subtitle, meals } = Astro.props;
---

<Content
  title={title}
  subtitle={subtitle}
  isAfterContent
  classes={{
    container: 'break-inside-avoid',
    title: 'text-2xl md:text-3xl mb-2',
    subtitle: 'text-lg',
    headlineContainer: 'mb-4 md:mb-6',
    content: 'mb-8',
  }}
>
  <Fragment slot="content">
    <div class="flex flex-col gap-4">
      {meals.map((meal) => <MealRow {...meal} />)}
    </div>
  </Fragment>
</Content>
